<style>
    table, td, th {
    border: 1px solid;
    }

    table {
    width: 50%;
    border-collapse: collapse;
    }
</style>

<h1>Users associated with <%= @org.name%></h1>

<% if @members.blank? %>
    <h2>No members</h2>
<% else %>
    <table>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Email</th>
        </tr>
        <% @members.each do |member| %>
            <tr>
                <td><%= member[0] %></td>
                <td><%= member[1] %></td>
                <td><%= member[2] %></td>
                <td><%= member[3] %></td>
                <td><%= member[4] %></td>
            </tr>
        <% end %>
    </table>    
<% end %>