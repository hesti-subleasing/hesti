<h1>Users#new</h1>
<p>Find me in app/views/hesti/new.html.erb</p>


<%= form_with model: @user, url: "/create", class: "signup-form" do |user_form| %>
<i class="fas fa-user-plus"></i>
  <%= user_form.text_field :first_name, class:"user-input", placeholder: "First Name", :required => true %>
  <%= user_form.text_field :last_name, class:"user-input", placeholder: "Last Name", :required => true %>
  <%= user_form.text_field :username, class:"user-input", placeholder: "Username", :required => true %>
  <%= user_form.email_field :email, class:"user-input", placeholder: "Email", :required => true %>
  <%= user_form.password_field :password, class:"user-input", placeholder: "Password",:required => true %>
  <%= user_form.submit "Sign Up", class: "btn" %>
  <div class="options-02">
    <p>Already Registered? <%= link_to "Login", "/login" %></p>
  </div>
  
<% end %>