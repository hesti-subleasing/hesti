<!DOCTYPE html>
<html>
  <head>
    <title>Hesti</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "/users/new.css", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="signup">
    <h1 style="position: absolute;top: -47px;">Sign Up</h1>

    <div class = "signup-form">
      <%= form_with model: @user, local: true, url: "/create", class: "signup-form" do |user_form| %>

      <i class="fas fa-user-plus"></i>

      <%= render partial: "field", locals: {form: user_form, type: "text", attribute: :first_name, placeholder: "First Name", errors: @user.errors} %>

      <%= render partial: "field", locals: {form: user_form, type: "text", attribute: :last_name, placeholder: "Last Name", errors: @user.errors} %>

      <%= render partial: "field", locals: {form: user_form, type: "text", attribute: :username, placeholder: "Username", errors: @user.errors} %>
      
      <%= render partial: "field", locals: {form: user_form, type: "email", attribute: :email, placeholder: "Email", errors: @user.errors} %>
      
      <%= render partial: "field", locals: {form: user_form, type: "password", attribute: :password, placeholder: "Password", errors: @user.errors} %>

      <%= render partial: "field", locals: {form: user_form, type: "password", attribute: :password_confirmation, placeholder: "Confirm Password", errors: @user.errors} %>

      <%= user_form.submit "Sign Up", class: "btn" %>
      <div class="options-02">
        <p>Already Registered? <%= link_to "Login", "/login"%></p>
      </div>
    </div>
  </body>
  
<% end %>